{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "uuid-generator",
  "title": "UUID Generator",
  "description": "A quick way to generate UUIDs without opening the browser",
  "icon": "command-icon.png",
  "author": "jmaeso",
  "contributors": [
    "GastroGeek",
    "pernielsentikaer",
    "LunaticMuch",
    "hmarr",
    "harsh_khandelwal",
    "lukas-runge"
  ],
  "keywords": [
    "guid",
    "GUID"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "generate",
      "title": "Generate UUIDs",
      "description": "Copy generated UUIDs to the clipboard",
      "mode": "no-view",
      "arguments": [
        {
          "name": "numberOfUUIDsToGenerate",
          "type": "text",
          "placeholder": "1",
          "required": false
        }
      ]
    },
    {
      "name": "generateV5",
      "title": "Generate V5 UUIDs",
      "description": "Copy generated UUIDs V5 to the clipboard",
      "mode": "no-view",
      "arguments": [
        {
          "name": "name",
          "type": "text",
          "placeholder": "UUID Name",
          "required": true
        },
        {
          "name": "numberOfUUIDsToGenerate",
          "type": "text",
          "placeholder": "1",
          "required": false
        }
      ],
      "preferences": [
        {
          "name": "uuidNamespace",
          "type": "textfield",
          "required": false,
          "default": "",
          "title": "UUID v5 Namespace",
          "label": "Namespace",
          "description": "The namespace for UUID v5"
        }
      ]
    },
    {
      "name": "generateV7",
      "title": "Generate V7 UUIDs",
      "description": "Copy generated UUIDs V7 to the clipboard",
      "mode": "no-view",
      "arguments": [
        {
          "name": "numberOfUUIDsToGenerate",
          "type": "text",
          "placeholder": "1",
          "required": false
        }
      ],
      "preferences": [
        {
          "name": "base32Encoding",
          "type": "checkbox",
          "required": false,
          "default": false,
          "title": "Options",
          "label": "Base32 Encoding",
          "description": "Should letters be Base32 encoded?"
        }
      ]
    },
    {
      "name": "generateUlid",
      "title": "Generate ULIDs",
      "description": "Copy generated ULIDs to the clipboard",
      "mode": "no-view",
      "arguments": [
        {
          "name": "numberOfULIDsToGenerate",
          "type": "text",
          "placeholder": "1",
          "required": false
        }
      ]
    },
    {
      "name": "generateTypeID",
      "title": "Generate TypeIDs",
      "description": "Copy generated TypeIDs to the clipboard",
      "mode": "no-view",
      "arguments": [
        {
          "name": "prefix",
          "placeholder": "Prefix",
          "type": "text",
          "required": true
        },
        {
          "name": "numberOfUUIDsToGenerate",
          "type": "text",
          "placeholder": "1",
          "required": false
        }
      ]
    },
    {
      "name": "viewHistory",
      "title": "View History",
      "description": "View the UUID history",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "upperCaseLetters",
      "type": "checkbox",
      "required": false,
      "default": false,
      "title": "Options",
      "label": "Uppercase Letters",
      "description": "Should letters be uppercased?"
    },
    {
      "name": "defaultAction",
      "description": "Set the default action",
      "type": "dropdown",
      "required": false,
      "title": "Default Action",
      "default": "copy",
      "data": [
        {
          "title": "Copy",
          "value": "copy"
        },
        {
          "title": "Paste",
          "value": "paste"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.91.2",
    "typeid-js": "^1.2.0",
    "ulidx": "^2.4.1",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "react-devtools": "^5.2.0",
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "^22.13.4",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.20.1",
    "eslint-plugin-import": "^2.31.0",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
